<div class="m-detail">
    <header>
       <ul>
       	<li action-type="goto.back" class="yo-ico">返回</li>
       	<li>{{title}}</li>
       	<li class="yo-ico">&#xe684;</li>
       </ul>
    </header>
    <section ms-visible="!isShowLoading">  
        <p><img ms-src="imgsrc" alt=""></p>
        <article>
           {{description}}
        </article>
    </section>
    <div class="yo-loading" ms-visible="isShowLoading">
        <div class="inner"><i class="yo-ico"></i></div>
    </div>
</div>